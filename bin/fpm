#!/usr/bin/env node

const CLI = require('commander');
const META = require('../package.json');

CLI.version(META.version, '-v, --version')

CLI.command('init')
  .description('Initialize the FPM config')
  .option('-t, --target [value]', 'Set the target directory ', `fpm`)
  .action((options) => {
    console.log('init');
    console.log(options.target);
  });

CLI.command('install <package>')
  .alias('i')
  .description('Install a package')
  .action((package) => {
    console.log('install');
    console.log(package);
  });

CLI.command('remove <package>')
  .alias('r')
  .description('Remove a package')
  .action((package) => {
    console.log('remove')
    console.log(package);
  });

CLI.parse(process.argv);
